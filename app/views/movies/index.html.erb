<h1>All Movies</h1>

<%= form_tag movies_path, method: :get do %>
  <div>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<div id="main-content" class="col-sm-12 col-sm-offset-1">
  <%= render @movies %>
</div>
<div class="col-sm-11 col-sm-offset-1">
  <%= paginate @movies %><br/>
</div>
