<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3" id="sign-up-box">
      <img alt="Rails" src="/assets/logo.jpg" id="logo"/>
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <div>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'name', class: 'form-control' %>
        </div>
        
        <div>
          <%= f.text_field :phone_no, autofocus: true, autocomplete: "phone_no", placeholder: 'phone', class: 'form-control' %>
        </div>
        
        <div>
          <%= f.form_group :gender, label: { text: "Gender" } do %>
            <%= f.radio_button :gender, 'male', label: "Male" %>
            <%= f.radio_button :gender, 'female', label: "Female" %>
          <% end %>
        </div>
        
        <div>
          <%= f.date_select :date_of_birth, autofocus: true, autocomplete: "date_of_birth", start_year: 1950 %>
        </div>
        
        <div>
          <%= f.text_field :status, autofocus: true, autocomplete: "status", placeholder: 'status', class: 'form-control' %>
        </div>
        
        <div>
          <%= f.email_field :email, autofocus: true, placeholder: 'email', class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div>
          <%= f.password_field :password, autocomplete: "off", placeholder: 'password', class: 'form-control' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'password', class: 'form-control' %>
        </div>

        <div>
          <%= f.password_field :current_password, autocomplete: "off", placeholder: 'password', class: 'form-control' %>
        </div>
        
        <div>
          <%= f.file_field :avatar, label: "Profile Picture" %>
        </div>

        <div>
          <%= f.submit "Update", class: 'form-control btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
