<h1><strong>All Actors</strong></h1>


<div class="row">
  <div id="side-menu"  class="col-sm-2">
    <ul id="links-list">
      <% if user_signed_in? && current_user.admin %>
        <%= render 'layouts/side_menu/admin_links' %>
      <% else %>
        <%= render 'layouts/side_menu/user_links' %>
      <% end %>
    </ul>
  </div>

  <div>
    <%= form_tag actors_path, method: :get do %>
      <div>
        <%= text_field_tag :search, params[:search] %>
        <%= button_tag do %>
          <i class="fa fa-search" aria-hidden="true"></i>
        <% end %>
      </div>
    <% end %>

    <div id="sign-up-box" class="col-sm-10">
      <%= render @actors %>
    </div>
  </div>
<div class="col-sm-10">
  <%= paginate @actors %><br/>
</div>
