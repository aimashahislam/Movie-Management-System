<div class="col-sm-3 single-post-card">
  <div class="card">
    <%= link_to actor_path(actor) do %>
      <%= image_tag setActorAvatarURL(actor), class: "card-img-top poster" %>
    <% end %>
    <div class="card-block">
      <h4 class="card-text">
        <%= link_to truncate(actor.name, length: 60), actor_path(actor) %>
      </h4>
    </div>
  </div>
</div>
