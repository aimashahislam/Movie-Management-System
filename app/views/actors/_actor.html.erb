<div class="col-sm-3 single-post-card" id=<%= admin_actor_path(actor.id) %>>
  <div class="card">
    <%= image_tag actor.avatar.url, class: "card-img-top poster" %>
    <div class="card-block">
      <h4 class="card-text">
        <%= truncate(actor.name, :length => 60) %>
      </h4>
      <div class="post-content">
        <h3><%= actor.name %></h3> 
        <p><%= actor.description %></p>
        <%= link_to "I'm interested", admin_actor_path(actor.id), class: 'interested' %>
      </div>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 -->
