<h1><strong>Edit Review Details</strong></h1>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3" id="sign-up-box">
    <%= bootstrap_form_for([@movie, @review]) do |f| %>
      <% if @review.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:
          </h2>
          <ul>
            <% @review.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="reviews">
        <div class="star-rating" data-score= <%= @review.rating %> ></div>
      </div>
      <div>
        <%= f.text_area :comment, autofocus: true, autocomplete: "comment", placeholder: 'comment', class: 'form-control', required: true %>
      </div>
      <div>
        <%= f.submit "Update", class: 'form-control btn btn-primary'  %>
      </div>
    <% end %>
  </div>
</div>
