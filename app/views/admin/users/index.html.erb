<h1>All Users</h1>
<div class="row">
  <div class="col-sm-10">
    <%= form_tag admin_users_path, method: :get do %>
      <div>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-2">
    <%= link_to('Add User', new_admin_user_path) %>
  </div>
</div>

<div id="main-content" class="col-sm-11 col-sm-offset-1">
  <table class="table">
    <tbody>
      <%= render @users %>
    </tbody>
  </table>
</div>
