<h1>Welcome to Admin Dashboard</h1>
<br />

<%= link_to('Add Movies', new_admin_movie_path) %>

<h1>All Movies</h1>
<%= form_tag admin_movies_path, method: :get do %>
  <div>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<div id="main-content" class="col-sm-12 col-sm-offset-1">
  <% @movies.each do |movie| %>
    <%= render partial: "movies/movie", locals: { movie: movie} %>
  <% end %>
</div>
<div class="col-sm-11 col-sm-offset-1">
  <%= paginate @movies %><br/>
</div>
