<h1><strong>All Movies</strong></h1>

<div class="row">
  <div class="col-sm-10">
    <%= form_tag admin_movies_path, method: :get do %>
      <div>
        <%= text_field_tag :search, params[:search] %>
        <%= button_tag do %>
          <i class="fa fa-search" aria-hidden="true"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-2">
    <%= link_to 'Add Movie', new_admin_movie_path, class: "btn btn-success" %>
  </div>
</div>

<div id="sign-up-box" class="col-sm-12">
  <table  class="table table-bordered table-striped">
    <thead>
      <th><strong>Name</strong></th>
      <th><strong>Edit</strong></th>
      <th><strong>Delete</strong></th>
    </thead>
    <tbody>
      <%= render @movies %>
    </tbody>
  </table>
  <div>
    <%= paginate @movies %><br/>
  </div>
</div>

