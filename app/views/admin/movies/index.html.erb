<h1>All Movies</h1>

<div class="row">
  <div class="col-sm-10">
    <%= form_tag admin_movies_path, method: :get do %>
      <div>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-2">
    <%= link_to('Add Movie', new_admin_movie_path) %>
  </div>
</div>

<div id="main-content" class="col-sm-11 col-sm-offset-1">
  <table class="table">
    <tbody>
      <%= render @movies %>
    </tbody>
  </table>
</div>

<div class="col-sm-11 col-sm-offset-1">
  <%= paginate @movies %><br/>
</div>
