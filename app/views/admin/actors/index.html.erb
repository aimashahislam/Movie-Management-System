<h1>All Actors</h1>
<div class="row">
  <div class="col-sm-10">
    <%= form_tag admin_actors_path, method: :get do %>
      <div>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-2">
    <%= link_to 'Add Actors', new_admin_actor_path, class: "btn btn-default" %>
  </div>
</div>


<div id="main-content" class="col-sm-11 col-sm-offset-1">
  <table class="table table-bordered">
    <thead>
      <th><strong>Name</strong></th>
      <th><strong>Edit</strong></th>
      <th><strong>Delete</strong></th>
    </thead>
    <tbody>
      <%= render @actors %>
    </tbody>
  </table>

<div class="col-sm-11 col-sm-offset-1">
  <%= paginate @actors %><br/>
</div>
