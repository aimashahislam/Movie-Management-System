<%= link_to('Add Actors', new_admin_actor_path) %>

<h1>All Actors</h1>

<%= form_tag admin_actors_path, method: :get do %>
  <div>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<div id="main-content" class="col-sm-12">
  <% @actors.each do |actor| %>
    <%= render partial: "actors/actor", locals: { actor: actor} %>
  <% end %>
</div>
