<%= form_for([:admin, @actor]) do |form| %>
  
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.date_select :date_of_birth %>
  </div>
  
  <div class="field">
    <%= form.label :bio %>
    <%= form.cktext_area :bio, rows: 15 %>
  </div>
  
  <div class="field">
    <%= form.label :picture %> 
    <%= form.file_field :avatar %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
