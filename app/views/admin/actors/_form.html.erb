<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1" id="sign-up-box">
      <%= bootstrap_form_for([:admin, @actor]) do |form| %>
        <% if @actor.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@actor.errors.count, "error") %> prohibited this actor from being saved:
            </h2>
            <ul>
              <% @actor.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div>
          <%= form.text_field :name, required: true, minlength: 2, maxlength: 255, autofocus: true, autocomplete: "name", placeholder: 'name', class: 'form-control' %>
        </div>

        <div>
          <%= form.text_field :date_of_birth, required: true, id: "datepicker", autofocus: true, autocomplete: "date_of_birth", start_year: 1950, class: 'form-control' %>
        </div>

        <div>
          <%= form.cktext_area :bio, rows: 15, required: true, class: 'form-control', autofocus: true %>
        </div>

        <div>
          <%= form.file_field :avatar, label: "Profile Picture", required: true %>
        </div>

        <div>
          <%= form.submit "Add Actor", class: 'form-control btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
