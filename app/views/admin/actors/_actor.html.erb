<div class="col-sm-3 single-post-card" id=<%= admin_actor_path(actor.id) %>>
  <div class="card">
    <%= link_to admin_actor_path(actor.id) do %>
      <%= image_tag actor.avatar.url, class: "card-img-top poster" %>
    <% end %>
    <div class="card-block">
      <h4 class="card-text">
        <%=link_to truncate(actor.name, :length => 60), admin_actor_path(actor.id) %>
      </h4>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 -->
